{
	"name": "catkin-helpers",
	"displayName": "Catkin Helpers",
	"description": "",
	"publisher": "abrick",
	"version": "0.2.0",
	"engines": {
		"vscode": "^1.58.0"
	},
	"activationEvents": [
		"onLanguage:cpp"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "catkin-helpers.catkin_build",
				"title": "Catkin Helpers: catkin build current package",
				"enablement": "editorLangId == cpp"
			},
			{
				"command": "catkin-helpers.catkin_build_no_deps",
				"title": "Catkin Helpers: catkin build current package w/o deps",
				"enablement": "editorLangId == cpp"
			},
			{
				"command": "catkin-helpers.make",
				"title": "Catkin Helpers: Make current package",
				"enablement": "editorLangId == cpp"
			},
			{
				"command": "catkin-helpers.make_tests",
				"title": "Catkin Helpers: Make tests of current package",
				"enablement": "editorLangId == cpp"
			},
			{
				"command": "catkin-helpers.run_tests",
				"title": "Catkin Helpers: Run tests of current package",
				"enablement": "editorLangId == cpp"
			}
		],
		"keybindings": [
			{
				"command": "catkin-helpers.catkin_build_no_deps",
				"key": "",
				"when": "editorTextFocus"
			},
			{
				"command": "catkin-helpers.catkin_build",
				"key": "",
				"when": "editorTextFocus"
			},
			{
				"command": "catkin-helpers.make",
				"key": "ctrl+b",
				"when": "editorTextFocus"
			},
			{
				"command": "catkin-helpers.make_tests",
				"key": "",
				"when": "editorTextFocus"
			},
			{
				"command": "catkin-helpers.run_tests",
				"key": "",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "Catkin Helpers",
			"properties": {
				"catkin-helpers.shellType": {
					"type": "string",
					"default": "zsh",
					"enum": [
						"zsh",
						"bash"
					],
					"description": "Default shell for test execution."
				}
			}
		}
	},
	"repository": "https://github.com/abrick1509/vs-code-catkin-helpers.git",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"vsce": "^1.96.1"
	}
}